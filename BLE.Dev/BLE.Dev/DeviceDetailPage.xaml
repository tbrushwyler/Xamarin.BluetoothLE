<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BLE.Dev.DeviceDetailPage">
  <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
    <Label Text="{Binding Name}" VerticalOptions="Center" HorizontalOptions="Center" />
    <ListView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" ItemsSource="{Binding Services}" x:Name="ServiceListView">
    </ListView>
  </StackLayout>
</ContentPage>